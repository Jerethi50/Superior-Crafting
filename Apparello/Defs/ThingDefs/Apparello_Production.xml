<!-- Schematic Shelf -->

 <ThingDef ParentName="BuildingBase">
    <defName>SchemRack</defName>
    <eType>BuildingComplex</eType>
    <label>Schematic shelf</label>
    <thingClass>Building_Storage</thingClass>
    <texturePath>Tables/SchemRack</texturePath>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>False</castEdgeShadows>
    <maxHealth>100</maxHealth>
    <flammability>1.0</flammability>
    <description>Haulers carry schematics here for storage.</description>
    <size>(4,1)</size>
    <workToBuild>580</workToBuild>
    <costList>
      <li>
        <thingDef>Metal</thingDef>
        <count>40</count>
      </li>
    </costList>
    <overdraw>False</overdraw>
    <killedLeavings>
      <li>
        <thingDef>ChunkSlag</thingDef>
        <count>1</count>
      </li>
    </killedLeavings>
    <filthLeavings>
      <li>
        <thingDef>SlagRubble</thingDef>
        <count>4</count>
      </li>
    </filthLeavings>
    <building>
      <fixedStorageSettings>
        <priority>Important</priority>
        <allowances>
          <categories>
            <li>Schematic</li>
          </categories>
        </allowances>
      </fixedStorageSettings> 
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationCategory>Furniture</designationCategory>
    <itemSurface>true</itemSurface>
  </ThingDef>

