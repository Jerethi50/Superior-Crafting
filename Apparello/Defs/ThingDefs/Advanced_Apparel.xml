<ThingDef ParentName="ApparelBase">
		<defName>Apparel_ha</defName>
		<label>Hive Armor</label>
    <description>Constructed of disassembled centipede. This extremely bulky armor is nigh indestructable. The Sheer weight of this piece of armor drastically hinders mobility</description>
     <texturePath>HA/ha</texturePath>
		<apparel>
				<damageAbsorption>
				<li>
					<injuryDef>Burn</injuryDef>
					<absorption>1</absorption>
				</li>
				<li>
					<injuryDef>Bruise</injuryDef>
					<absorption>0.80</absorption>
				</li>
				<li>
					<injuryDef>Shredded</injuryDef>
					<absorption>0.70</absorption>
				</li>
				<li>
					<injuryDef>Cut</injuryDef>
					<absorption>0.70</absorption>
				</li>
				<li>
					<injuryDef>Stab</injuryDef>
					<absorption>0.50</absorption>
				</li>
				<li>
					<injuryDef>Gunshot</injuryDef>
					<absorption>0.80</absorption>
				</li>
				<li>
				  <injuryDef>Scratch</injuryDef>
				  <absorption>0.80</absorption>
				</li>
				<li>
				  <injuryDef>Bite</injuryDef>
				  <absorption>0.90</absorption>
				</li>
				<li>
				  <injuryDef>Crack</injuryDef>
				  <absorption>0.80</absorption>
				</li>
			</damageAbsorption>
			<moveSpeed>-0.80</moveSpeed>
			<graphicPath>HA/ha</graphicPath>
			<layers>
				<li>OnSkin</li>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<commonality>0</commonality>
			<tags>
				<li>CraftedArmor</li>
			</tags>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>20</weight>
					<only>RGBA(1,1,1,1)</only>
				</li>
				<li>
					<weight>5</weight>
					<max>RGBA(1,1,1,1)</max>
					<min>RGBA(0.30,0.30,0.30,1)</min>
				</li>				
			</options>
		</colorGenerator>

	</ThingDef>



