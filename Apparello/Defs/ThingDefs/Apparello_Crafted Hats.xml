 <ThingDef ParentName="ApparelBase">
    <defName>Apparel_Hivehelm</defName>
    <label>Hive helmet</label>
	<description>Coupled with the Hive armor, the beastly visage of this helmet could very well cause 'wet trousers' symptom in your foes</description>
    <texturePath>Hats/Display/Hivehat</texturePath>
    <apparel>
      <damageAbsorption>
        <li>
          <injuryDef>Burn</injuryDef>
          <absorption>1</absorption>
        </li>
        <li>
          <injuryDef>Bruise</injuryDef>
          <absorption>0.45</absorption>
        </li>
        <li>
          <injuryDef>Shredded</injuryDef>
          <absorption>0.4</absorption>
        </li>
        <li>
          <injuryDef>Cut</injuryDef>
          <absorption>0.45</absorption>
        </li>
        <li>
          <injuryDef>Stab</injuryDef>
          <absorption>0.45</absorption>
        </li>
        <li>
          <injuryDef>Gunshot</injuryDef>
          <absorption>0.35</absorption>
        </li>
        <li>
          <injuryDef>Scratch</injuryDef>
          <absorption>0.7</absorption>
        </li>
        <li>
          <injuryDef>Bite</injuryDef>
          <absorption>0.7</absorption>
        </li>
        <li>
          <injuryDef>Crack</injuryDef>
          <absorption>0.4</absorption>
        </li>
      </damageAbsorption>
      <moveSpeed>-0.04</moveSpeed>
      <graphicPath>Hats/Hivehat</graphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <commonality>30</commonality>
      <tags>
        <li>CraftedHelmet</li>
      </tags>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.70,0.70,0.70,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>4</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef> 
 
