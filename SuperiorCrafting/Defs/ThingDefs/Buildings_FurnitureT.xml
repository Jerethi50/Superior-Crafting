		<ThingDef ParentName="BuildingBase">
		<defName>TableShort_Wood</defName>
		<eType>BuildingInert</eType>
		<label>Dragable Wood Table</label>
		<thingClass>Building_Storage</thingClass>
		<linkDrawerType>Basic</linkDrawerType>
		<texturePath>Things/Building/SCFurniture/Tables/TableWood_Atlas</texturePath>
		<uiIconPath>Things/Building/SCFurniture/Tables/TableWood_Icon</uiIconPath>
		<linkFlags>
			<li>Sandbags</li>
		</linkFlags>
		<altitudeLayer>Waist</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>30</pathCost>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.3</fillPercent>
		<maxHealth>30</maxHealth>
		<Beauty>Neutral</Beauty>
		<flammability>1.0</flammability>
		<description>Dragable Wood Table.  A place for your colonists to sit and eat.  Can also store meals!
Beauty:  Neutral</description>
		<size>(1,1)</size>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<workToBuild>375</workToBuild>
		<costList>
			<li>
				<thingDef>WoodPlank</thingDef>
				<count>15</count>
			</li>
		</costList>
		<overdraw>false</overdraw>
		<sunShadowInfo>
			<basewidth>0.3</basewidth>
			<baseHeight>0.3</baseHeight>
			<tallness>0.6</tallness>
		</sunShadowInfo>
		<rotatable>false</rotatable>
		<selectable>true</selectable>
		<neverMultiSelect>true</neverMultiSelect>
		<building>
			<fixedStorageSettings>
				<priority>Important</priority>
				<allowances>
					<categories>
						<li>FoodMeals</li>
					</categories>
				</allowances>
			</fixedStorageSettings> 
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<designationCategory>Furniture</designationCategory>
		<itemSurface>true</itemSurface>
	</ThingDef>
	
