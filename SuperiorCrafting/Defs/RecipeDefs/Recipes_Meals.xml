<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>


	<RecipeDef>
		<defName>MakeSimpleSalad</defName>
		<label>Make a simple salad</label>
		<description>Prepares a barely edible meal from raw meat. It's basically ground meat and it isn't even cooked so it's fast to prepare.</description>
		<jobString>Preparing a simple salad.</jobString>
		<workAmount>125</workAmount>
		<workTimeSkillNeed>CookTime</workTimeSkillNeed>
		<workEffect>Cook</workEffect>
    <sustainerSoundDef>Recipe_ButcherCorpseFlesh</sustainerSoundDef>
    <ingredients>
			<li>
				<filter>
					<categories>
						<li>PlantFoodRaw</li>
					</categories>
				</filter>
				<count>6</count>
			</li>
		</ingredients>
		<products>
			<li>
				<thingDef>MealSalad</thingDef>
				<count>1</count>
			</li>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantFoodRaw</li>
			</categories>
		</defaultIngredientFilter>
		<skillGains>
			<li>
				<skill>Cooking</skill>
				<xp>30</xp>
			</li>
		</skillGains>
	</RecipeDef>


